              "confidence": { "type": "number" },
              "frequency": { "type": "integer" },
              "tags": { "type": "array", "items": { "type": "string" } },
              "domains": { "type": "array", "items": { "type": "string" } }
            }
          },
          "description": "Identified patterns"
        }
      },
      "required": ["project_id", "pattern_count", "patterns"]
    }
