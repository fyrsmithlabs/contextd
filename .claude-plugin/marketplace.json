{
  "name": "contextd",
  "owner": {
    "name": "FyrSmith Labs",
    "email": "contact@fyrsmithlabs.com"
  },
  "metadata": {
    "description": "Cross-session memory and context management for AI agents",
    "version": "0.2.0"
  },
  "plugins": [
    {
      "name": "contextd-mcp",
      "source": "./",
      "description": "MCP server for cross-session memory, checkpoints, and error remediation. Requires contextd binary - install via Homebrew (brew install fyrsmithlabs/tap/contextd) or download from GitHub releases.",
      "version": "0.2.0",
      "author": {
        "name": "FyrSmith Labs",
        "email": "contact@fyrsmithlabs.com"
      },
      "homepage": "https://github.com/fyrsmithlabs/contextd",
      "repository": "https://github.com/fyrsmithlabs/contextd",
      "license": "MIT",
      "keywords": [
        "mcp",
        "memory",
        "context",
        "checkpoint",
        "ai-agent",
        "semantic-search",
        "remediation"
      ],
      "category": "productivity",
      "strict": false,
      "mcpServers": {
        "contextd": {
          "type": "stdio",
          "command": "contextd",
          "args": ["--mcp", "--no-http"],
          "env": {}
        }
      }
    }
  ]
}
